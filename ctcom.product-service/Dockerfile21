# Use the official ASP.NET runtime image as the base image
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER app
WORKDIR /app
EXPOSE 5221  
# EXPOSE 7002  

# Use the official .NET SDK image to build the application
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src

# Copy the project file and restore dependencies
COPY ctcom.product-service/ctcom.product-service.csproj ctcom.product-service/
RUN dotnet restore "ctcom.product-service/ctcom.product-service.csproj"

# Copy the rest of the application code
COPY . .
WORKDIR "/src/ctcom.product-service"
RUN dotnet build "ctcom.product-service.csproj" -c $BUILD_CONFIGURATION -o /app/build

# Publish the application
FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "ctcom.product-service.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .

# Copy the appsettings.Development.json file into the container
COPY ctcom.product-service/appsettings.json .

ENTRYPOINT ["dotnet", "ctcom.product-service.dll"]
